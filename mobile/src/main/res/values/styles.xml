<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/settingsPrimary</item>
        <item name="colorPrimaryDark">@color/settingsPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>-->
    </style>

    <style name="AppTheme.Main">
        <item name="colorPrimary">@color/primaryGrey</item>
        <item name="colorPrimaryDark">@color/primaryGreyDark</item>
        <item name="colorAccent">@color/accentGrey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:windowBackground">@android:color/background_light</item>-->
    </style>

    <style name="AppTheme.Main.Translucent">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Settings" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/settingsPrimary</item>
        <item name="colorPrimaryDark">@color/settingsPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
